{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "declaration": true,
    "listEmittedFiles": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "typeRoots": ["node_modules/@types", "typings"],
    "moduleResolution": "node",
    "noImplicitUseStrict": true,
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": ["index.ts"]
}
