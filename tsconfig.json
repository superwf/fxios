{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "ESNext",
    "target": "esnext",
    "noImplicitAny": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strictNullChecks": true,
    "declaration": true,
    "declarationDir": "module",
    "listEmittedFiles": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "noImplicitUseStrict": true,
    "outDir": "module",
    "lib": ["dom", "es2015", "es5", "es6"]
  },
  "include": ["index.ts"]
}
